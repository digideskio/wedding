.navigation
	text-align center
	font-family 'DistantStroke'
	font-weight normal
	&--item
		display inline-block
		vertical-align middle
		text-align center
		width 100%
		font-size 50px
		@media $tablet-breakpoint
			width 50%
		@media $desktop-breakpoint
			width auto
			padding 0 20px
		@media $desktop-large-breakpoint
			min-width 20%
			padding 0
		a
			color $Darkgrey 
			text-decoration none
			display inline-block
			vertical-align middle
			padding 0.25em 0.25em 0.25em
			margin-bottom 1px
			&:hover
				border-bottom 1px solid $Mediumgrey
				margin-bottom 0
			.small
				font-size 30px
		img
			max-width 50px
			max-height 50px
			height auto
			width auto
			display inline-block
			vertical-align middle