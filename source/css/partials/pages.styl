.arch
    text-align center
    margin 30px auto
    @media $tablet-breakpoint
        margin 50px auto
    img
        width 100%
        max-width 320px
        @media $tablet-breakpoint
            max-width 360px
            
.column
    margin-top 50px
    @media $tablet-breakpoint
        width 33.333333%
        display inline-block
        vertical-align top
        padding 0 50px
    &--title
        font-size 50px
        margin-bottom 15px
    &--subtitle
        font-family 'Karbon'
        font-size 23px
        font-weight bold
        margin-bottom 0px
    &--content
        font-size 20px
        line-height 1.3
        margin-bottom 15px