.arch
    text-align center
    margin 30px auto
    @media $tablet-breakpoint
        margin 50px auto
    img
        width 100%
        max-width 320px
        @media $tablet-breakpoint
            max-width 360px
            
.column
    @media $tablet-breakpoint
        width 33.333333%
        display inline-block
        vertical-align top
        padding 0 35px
    &--title
        font-size 40px
        margin-bottom 15px
    &--content
        font-size 15px
        margin-bottom 15px